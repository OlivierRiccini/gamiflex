<div class="login-background" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url('<%= image_path "photo1.jpeg"%>')">
  <div class="login-container">
    <h2><i class="fas fa-sign-in-alt"></i>&nbsp;&nbsp;Enter Gamiflex</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in!" , class: "main-btn"%>
      </div>
    <% end %>
    <hr>
    <%= render "devise/shared/links" %>
  </div>
</div>
