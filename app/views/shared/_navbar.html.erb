<div class="navbar-gamiflex">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-gamiflex-brand" do %>
    <img src="" alt="GAMIFLEX LOGO">
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-gamiflex-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Home", root_path, class: "navbar-gamiflex-item navbar-gamiflex-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-gamiflex-item">
        <div class="dropdown">
          <% if current_user.photo_url %>
            <div class="avatar-box dropdown-toggle" id="navbar-gamiflex-menu" data-toggle="dropdown">
              <%= cl_image_tag current_user.photo, url_options = {class: "avatar"} %>
              <% if Offer.where(product: current_user.products, state: "pending").length > 0 %>
                <div class="icon">
                  <p>
                     <%= Offer.where(product: current_user.products, state: "pending").length %>
                  </p>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="avatar-box dropdown-toggle" id="navbar-gamiflex-menu" data-toggle="dropdown">
              <img src="http://www.pvhc.net/img8/dahwcppwhvxerusxpwst.png" alt="" class= "avatar">
              <% if Offer.where(product: current_user.products, state: "pending").length > 0 %>
                <div class="icon">
                  <p>
                    <%= Offer.where(product: current_user.products, state: "pending").length %>
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-gamiflex-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".users", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path(current_user) do %>
                <i class="fa fa-cog"></i>  <%= t(".edit", default: "Edit") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-gamiflex-item navbar-gamiflex-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn-submit" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-gamiflex-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-gamiflex-dropdown-menu">
        <li><a href="#">My Profile</a></li>
        <li><a href="#">Logout</a></li>
      </ul>
    </div>
  </div>
</div>
