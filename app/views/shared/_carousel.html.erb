<div class="slider-container">
  <div class="title-container">
    <h2 class="title"><strong>Tell us the games you like | <%= remaining %> remaining</strong></h2>
    <button type="button" class="btn btn-secondary" data-container="body" data-toggle="popover" data-placement="right" data-content="Hover over each game and click on either like or dislike">
      ?
    </button>
  </div>
  <span id="nextArrow"></span>
  <span id="prevArrow"></span>
  <div id="slider" class="slider">
    <% games.each do |game| %>
      <div class="item-carousel" style="background-image: url('<%= cl_image_path(game.photo) %>'); background-size: cover; height: 35vh;">
        <div class="game-links">
          <%= link_to game_states_path( { game_id: game.id, state: "like" } ), method: :post, remote: true, class: "like-btn"  do %>
            <i class="fas fa-thumbs-up"></i>
          <% end %>
          <%= link_to game_states_path( { game_id: game.id, state: "dislike" } ), method: :post, remote: true, class: "dislike-btn"  do %>
            <i class="fas fa-thumbs-down"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
